@model IEnumerable<DHSolutionsWeb.Models.Games>

@{
    ViewBag.Title = "Spel";
}

@Html.Partial("underHeader", "Spellista")



<p>
    @Html.ActionLink("SKAPA NY", "addEdit", null, null, new { @class = "btn btn-secondary" })
</p>


<table class="table table-striped table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.img_url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.realease_year)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Url.Content(item.img_url ?? "https://www.thermaxglobal.com/wp-content/uploads/2020/05/image-not-found.jpg")" alt="Image" class="img-thumbnail" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>

            <td>
                @item.realease_year.ToShortDateString()
                @*@Html.DisplayFor(modelItem => item.realease_year)*@
            </td>
            <td>
                <div class="d-flex flex-row">
                    @Html.ActionLink("Detaljer", "details", new { id = item.Id }, new { @class = "btn btn-secondary" }) |
                    @Html.ActionLink("Redigera", "addEdit", new { id = item.Id }, new { @class = "btn btn-secondary" }) |
                    @Html.ActionLink("Radera", "remove", new { id = item.Id }, new { @class = "btn btn-secondary" })
                </div>

            </td>
        </tr>
    }

</table>
